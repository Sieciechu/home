alias ls="ls -p --group-directories-first --color=always"
alias la="ls -pA --group-directories-first --color=always"
alias ll="ls -lhF --group-directories-first --color=always"

alias chromium-browser="chromium-browser --incognito"

alias gl='git log --graph --decorate=full --oneline -n 20'
alias gl1='git log --graph --decorate=full --oneline -n 10'
alias gs='git status'
alias grc='git rebase --continue'
alias gpo='git push origin'
alias gfo='git fetch --prune origin'
alias less='less -i'
